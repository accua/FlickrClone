<h1> <%= @picture.title %> </h1>

<%= image_tag(@picture.local_pic.url(:full)) %>

<br>
<% if current_user.id == @picture.owner_id %>
<%= link_to "Edit", edit_picture_path %>
<%= link_to "Delete", picture_path(@picture),
                        :data => {:confirm => "Are you sure?",
                        :method => "delete"} %>

<%= link_to "Tag a User", new_picture_tag_path(@picture) %>
<% else %>
<%= link_to "Tag a User", new_picture_path %>
<% end %>
